{
  "name": "@optimizely/tracking",
  "version": "1.0.0",
  "description": "Universal B2B visitor tracking script (<8KB) for any web platform",
  "type": "module",
  "main": "dist/tracker.min.js",
  "module": "dist/tracker.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "dev": "rollup -c --watch --environment NODE_ENV:development",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "size": "ls -la dist/"
  },
  "keywords": [
    "tracking",
    "analytics",
    "b2b",
    "visitor-tracking",
    "universal",
    "platform-agnostic"
  ],
  "author": "Optimizely Team",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/jest": "^29.5.14",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "rollup": "^4.27.4",
    "rollup-plugin-bundle-size": "^1.0.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=16"
  }
}

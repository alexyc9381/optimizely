{
  "name": "optimizely-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "turbo run test",
    "test:api": "cd apps/api && npm run test",
    "test:web": "cd apps/web && npm run test",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "prepare": "if [ -d 'node_modules/husky' ]; then husky; fi",
    "safety-check": "node scripts/verify-critical-files.cjs",
    "emergency-recovery": "node scripts/emergency-recovery.cjs",
    "update-context": "node scripts/update-context.cjs",
    "safe-commit": "npm run safety-check && npm run update-context && npm run build && npm run test",
    "env:dev": "./scripts/setup-env.sh development",
    "env:staging": "./scripts/setup-env.sh staging",
    "env:prod": "./scripts/setup-env.sh production",
    "env:validate": "./scripts/validate-env.sh",
    "docker:dev": "docker-compose up --build",
    "docker:staging": "docker-compose -f docker-compose.staging.yml up --build",
    "docker:prod": "docker build -t optimizely-ai .",
    "deploy:dev": "./scripts/deploy/deploy.sh development",
    "deploy:staging": "./scripts/deploy/deploy.sh staging",
    "deploy:production": "./scripts/deploy/deploy.sh production",
    "deploy:staging:bg": "./scripts/deploy/deploy.sh staging --blue-green",
    "deploy:production:bg": "./scripts/deploy/deploy.sh production --blue-green",
    "deploy:dry-run": "./scripts/deploy/deploy.sh staging --dry-run"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "turbo": "^2.5.4"
  },
  "dependencies": {
    "lucide-react": "^0.536.0"
  }
}
